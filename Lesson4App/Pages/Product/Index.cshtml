@page
@model Lesson4App.Pages.Product.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Info != "")
{
    <div class="alert alert-success" role="alert">
        @Model.Info
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">#</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td scope="row">@item.Name</td>
                <td scope="row">@item.Price</td>
                <td scope="row">
                    <a class="btn btn-outline-warning" asp-page-handler="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td scope="row">
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<form class="col-5" method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Product Price</label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" min="0" placeholder="Enter price" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
